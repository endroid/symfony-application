{% extends admin.getTemplate('base_list_field') %}

{% block field %}

    {% for item in object.path %}

        {% if loop.index > 1 %}&nbsp;&gt;&nbsp;{% endif %}

        {% set route = route(item.routeKey) %}

        {% if item.id != app.request.query.get('parent') %}<a href="{{ path(app.request.attributes.get('_route'), { parent: item.id }) }}">{% endif %}

        {% if route %}

            {{ route.label }}

        {% else %}

            {{ item.tag }}

        {% endif %}

        {% if item.id != app.request.query.get('parent') %}</a>{% endif %}

    {% endfor %}

{% endblock %}
