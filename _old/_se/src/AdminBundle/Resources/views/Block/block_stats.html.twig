{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="info-box">
        <span class="info-box-icon {{ settings.color }}"><i class="fa {{ settings.icon }}"></i></span>
        <div class="info-box-content">
            <span class="info-box-text">{{ settings.text|trans({}, admin.translationDomain) }}</span>
            <span class="info-box-number">{{ pager.count() }}</span>
            <a href="{{ admin.generateUrl('list', {filter: settings.filters}) }}" class="small-box-footer">
                {{ 'stats_view_more'|trans({}, 'SonataAdminBundle') }} <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
{% endblock %}
