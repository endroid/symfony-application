{% extends 'pdf/base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <style>
        .content {
            padding: 0 30px;
            text-align: justify;
            width: 720px;
        }
        .content .item {
            page-break-before: always;
            page-break-inside: avoid;
        }
        .content .sub {
            page-break-before: always;
            page-break-inside: avoid;
        }
        .content .intro .banner {
            background-image: url('data:image/png;base64,');
            width: 100%;
            background-size: auto 150px;
            height: 150px;
        }
        .content table {
            border-collapse: collapse;
            width: 100%;
        }
        .content table th {
            text-transform: uppercase;
            background-color: #ccc;
        }
        .content table td {
            color: #555;
        }
        .content table th,
        .content table td {
            border: 1px solid #ccc;
            text-align: center;
            padding: 2px 5px;
        }
    </style>

{% endblock %}

{% block content %}

    <div class="content">
        <div class="intro">
            <h1>{{ intro.title }}</h1>
            <div class="banner"></div>
            {{ intro.content|raw }}
        </div>
        <div class="items">
            {% for item in items %}
                <div class="item" id="{{ item.id }}">
                    <h1>{{ item.title }}</h1>
                    {{ item.content|raw }}
                    {% for sub in item.subs %}
                        <div class="sub">
                            <h2>{{ sub.title }}</h2>
                            {{ sub.content|raw }}
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
