{% extends 'example/pdf/base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <style>
        .footer {
            height: 45px;
            padding: 0 20px;
            text-transform: uppercase;
        }
        .footer .title {
            width: 100%;
            position: absolute;
            left: 20px;
            top: 2px;
