#!/bin/sh

set -e

if [ ! -f vendor/bin/php-cs-fixer ]; then
    curl -LsS https://github.com/FriendsOfPHP/PHP-CS-Fixer/releases/download/v2.16.3/php-cs-fixer.phar -o vendor/bin/php-cs-fixer --create-dirs
    chmod +x vendor/bin/php-cs-fixer
fi

echo "Running CS Fixer ..."
vendor/bin/php-cs-fixer fix --config=.php_cs.dist --using-cache=no
