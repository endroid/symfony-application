#!/usr/bin/env bash

set -e

yarn build

curl -sS https://getcomposer.org/installer | php -- --filename=composer
php -d memory_limit=-1 composer install --prefer-dist --no-progress -n -q

bin/console doctrine:database:create --if-not-exists -q
bin/console doctrine:migrations:migrate -n -q

bin/console ckeditor:install --no-progress-bar --clear=skip -n -q
bin/console assets:install --symlink -q

#make generate-jwt-keys
