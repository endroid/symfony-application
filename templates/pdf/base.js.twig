<script type="text/javascript">
    function subst() {
        let vars = {};
        let valuePairs = document.location.search.substring(1).split('&');
        vars['section-number'] = '';
        for (let i in valuePairs) {
            let valuePair = valuePairs[i].split('=', 2);
            vars[valuePair[0]] = decodeURIComponent(valuePair[1]);
            if (valuePair[0] === 'section') {
                let parts = vars[valuePair[0]].split(',');
            }
        }
        let replaceClasses = ['frompage','topage','page','webpage','section','subsection','subsubsection'];
        for (let i in replaceClasses) {
            let hits = document.getElementsByClassName(replaceClasses[i]);
            for (let j = 0; j < hits.length; j++) {
                hits[j].textContent = vars[replaceClasses[i]];
            }
        }
    }
</script>
